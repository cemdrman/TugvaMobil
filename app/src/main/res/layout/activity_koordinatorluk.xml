<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:text="Başakşehir İlçe Temsilciliği"
                android:id="@+id/textView2"
                android:background="@drawable/rounded_corner"
                android:textColor="@color/white"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:textStyle="normal|bold"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp" />

            <TextView
                android:text=" "
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView3"
                android:background="@color/time_line"
                android:layout_below="@+id/textView2"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/red_circle"
                android:layout_marginTop="12dp"
                android:id="@+id/imageView3"
                android:layout_below="@+id/textView2"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="İlçe Temsilcimiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:layout_alignTop="@+id/imageView3"
                android:layout_toRightOf="@+id/imageView3"
                android:layout_toEndOf="@+id/imageView3"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:textAlignment="textStart"
                android:textColor="@color/actionbar_color" />

            <TextView
                android:text="Selman ÇELİK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:layout_alignBottom="@+id/imageView4"
                android:layout_toRightOf="@+id/imageView4"
                android:layout_toEndOf="@+id/imageView4"
                android:paddingLeft="3dp"
                android:textColor="@color/koordinator_name"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/red_circle"
                android:id="@+id/imageView6"
                android:layout_marginTop="@dimen/ldrawer_drawableSize"
                android:layout_below="@+id/textView2"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="Teşkilat Koordinatörü"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:layout_alignTop="@+id/imageView6"
                android:layout_toLeftOf="@+id/imageView6"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp"
                android:textAlignment="textEnd"
                android:textColor="@color/actionbar_color"/>

            <TextView
                android:text="TÜGVA’nın kuruluş gayesini gerçekleştirmek amacıyla; ülkemizin nitelikli insanlarına ulaşma çabası içerisinde olan, mevcut tabanı, dinamik ve amaçlara dönük olarak yüksek bir motivasyonla çalıştırma işini üstlenen koordinatörlüğümüzdür."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:layout_below="@+id/imageView4"
                android:layout_alignRight="@+id/textView7"
                android:layout_alignEnd="@+id/textView7"
                android:textAlignment="textEnd"
                android:textSize="10sp"
                android:textColor="@color/year"
                android:paddingLeft="5dp"  />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/alican_cetinkaya"
                android:id="@+id/imageView7"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/time_line"
                android:layout_below="@+id/textView8"
                android:layout_alignRight="@+id/textView8"
                android:layout_alignEnd="@+id/textView8"
                android:layout_marginTop="5dp" />

            <TextView
                android:text="Koordinatör"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:textColor="@color/colorAccent"
                android:textSize="10sp"
                android:textStyle="normal|bold"
                android:layout_alignBottom="@+id/imageView7"
                android:layout_toLeftOf="@+id/imageView7"
                android:layout_toStartOf="@+id/imageView7"
                android:layout_marginBottom="18dp"
                android:paddingRight="5dp" />

            <TextView
                android:text="Alican ÇETİNKAYA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/textView2"
                android:layout_toStartOf="@+id/textView2"
                android:paddingRight="5dp"
                android:textColor="@color/koordinator_name"
                android:textAlignment="textEnd" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/red_circle"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="189dp"
                android:id="@+id/imageView8" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/selman_celik"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/time_line"
                android:id="@+id/imageView4"
                android:layout_alignBottom="@+id/textView7"
                android:layout_alignLeft="@+id/textView4"
                android:layout_alignStart="@+id/textView4" />

            <TextView
                android:text="Kadın ve Aile Koordinatörü"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:layout_alignTop="@+id/imageView8"
                android:layout_alignLeft="@+id/imageView4"
                android:layout_alignStart="@+id/imageView4"
                android:textAlignment="textStart"
                android:textColor="@color/actionbar_color" />

            <TextView
                android:text="10-35 yaş arası öğrenci, çalışan, eş ve anne olan hanımlarımızın, milli ve manevi değerlerimize bağlı, bilgi ve özgüven sahibi, potansiyelinin farkında ve bunu açığa çıkarmayı başarabilen, tarih ve medeniyet şuuru kazanmış..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:layout_below="@+id/textView11"
                android:layout_alignLeft="@+id/textView11"
                android:layout_alignStart="@+id/textView11"
                android:textSize="10sp"
                android:textColor="@color/year"
                android:textAlignment="textStart"
                android:paddingRight="5dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/default_user"
                android:layout_below="@+id/textView12"
                android:layout_alignLeft="@+id/textView12"
                android:layout_alignStart="@+id/textView12"
                android:id="@+id/imageView9"
                android:layout_marginTop="5dp"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/time_line" />

            <TextView
                android:text="Fatıma Betül YANTURA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView9"
                android:layout_toRightOf="@+id/imageView9"
                android:layout_toEndOf="@+id/imageView9"
                android:id="@+id/textView14"
                android:textAlignment="textStart"
                android:textColor="@color/koordinator_name" />

            <TextView
                android:text="Koordinatör"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView13"
                android:textColor="@color/colorAccent"
                android:textSize="10sp"
                android:paddingLeft="5dp"
                android:textStyle="normal|bold"
                android:layout_above="@+id/textView14"
                android:layout_toRightOf="@+id/imageView9"
                android:layout_toEndOf="@+id/imageView9" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>